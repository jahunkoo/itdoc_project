<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="left|center_vertical"
    android:orientation="horizontal"
    android:weightSum="6" >

    <ImageView
        android:id="@+id/imageview_choose_clinic_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doctor7" />

    <ImageView
        android:id="@+id/imageview_choose_clinic_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doctor5" />

    <ImageView
        android:id="@+id/imageview_choose_clinic_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doctor3" />

    <ImageView
        android:id="@+id/imageview_choose_clinic_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doctor1" />

    <ImageView
        android:id="@+id/imageview_choose_clinic_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doctor8" />

    <ImageView
        android:id="@+id/imageview_choose_clinic_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/doctor10" />

</LinearLayout>