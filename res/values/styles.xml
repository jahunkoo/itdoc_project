<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Theme Style -->
    <style name="ItDocActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ITDocActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ITDocActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ITDocActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@android:color/white</item>

        <!-- Support library compatibility -->
        <!-- <item name="background">@drawable/actionbar_background</item> -->
    </style>

    <style name="black_tracendent">
        <item name="android:background">@android:color/black</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="black_tracendent">
        <item name="android:background">@android:color/black</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="suppoters_line_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dip</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/user_profile_label_separator</item>
    </style>

    <style name="suppoters_sentence">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
      	<item name="android:lineSpacingExtra">10sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="suppoters_sentence_bold" parent="suppoters_sentence">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <!-- <item name="android:textStyle">bold</item> -->
    </style>

    <style name="main_drawer_line_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/user_profile_label_separator</item>
    </style>

    
    <!-- new morak -->
    <style name="suppoters_basic_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="suppoters_new_line_text" parent="suppoters_basic_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:background">@color/user_profile_label_separator</item>
    </style>
    <style name="suppoters_basic_text" parent="suppoters_basic_style">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">16sp</item>
      	<item name="android:lineSpacingExtra">10sp</item>
        
    </style>
    
